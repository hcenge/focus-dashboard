<style>
  .theme-toggle {
    position: fixed;
    top: 16px;
    right: 16px;
    z-index: 100;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--gray);
  }

  .theme-toggle svg {
    width: 20px;
    height: 20px;
    fill: currentColor;
  }

  .theme-toggle .moon-icon {
    display: none;
  }

  :global([data-theme="dark"]) .theme-toggle .sun-icon {
    display: none;
  }

  :global([data-theme="dark"]) .theme-toggle .moon-icon {
    display: block;
  }

  .theme-toggle:active {
    color: var(--fg);
  }

  @media (hover: hover) {
    .theme-toggle:hover {
      color: var(--fg);
    }
  }

  @media (max-width: 600px) {
    .theme-toggle {
      top: 12px;
      right: 12px;
    }
  }

  /* Prevent overlap with calendar in landscape */
  @media (max-height: 500px) {
    .theme-toggle {
      top: 8px;
      right: 8px;
    }
  }
</style>
